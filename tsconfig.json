{
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "es6",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "inlineSourceMap": false,
    "declarationDir": "./dist/@types/chrisweb-utilities",
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "lib": [ "es6", "dom" ],
    "target": "es5",
    "downlevelIteration": true // fix for string as array, iterate over string (used in uri.ts)
  },
  "exclude": [
    "node_modules",
    "examples",
    "scripts",
    "dist",
    "tests"
  ]
}